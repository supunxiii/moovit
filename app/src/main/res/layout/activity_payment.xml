<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">


    <TextView
        android:id="@+id/txtViewTerms"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="674dp"
        android:layout_marginBottom="23dp"
        android:fontFamily="@font/fredoka_one"
        android:text="*View Terms and Conditions"
        android:textColor="#42B34D"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtDuration"
        android:layout_width="168dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="207dp"
        android:layout_marginBottom="201dp"
        android:background="@drawable/edittext_rounded_background"
        android:gravity="center_vertical|start"
        android:hint="Duration"
        android:text="1 Month"
        android:paddingStart="13dp" />

    <TextView
        android:id="@+id/txtRoute"
        android:layout_width="168dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="201dp"
        android:background="@drawable/edittext_rounded_background"
        android:gravity="center_vertical|start"
        android:hint="Route"
        android:text="Colombo - Kandy"
        android:paddingStart="13dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/courgette"
        android:text="Payment"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/txtCVV"
        android:layout_width="302dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="274dp"
        android:background="@drawable/edittext_rounded_background"
        android:gravity="center_vertical|start"
        android:hint="CVV"
        android:paddingStart="13dp" />

    <ImageView
        android:id="@+id/btnProfilePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="44dp"
        app:srcCompat="@drawable/profile_icon" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/button_disabled_background"
        android:fontFamily="@font/fredoka_one"
        android:text="Confirm and Pay"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/moovit_button"
        android:fontFamily="@font/fredoka_one"
        android:text="Agree to Terms and Conditions*"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/txtValidThru"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="343dp"
        android:background="@drawable/edittext_rounded_background"
        android:gravity="center_vertical|start"
        android:hint="Valid Thru: MM/YY"
        android:paddingStart="13dp" />

    <EditText
        android:id="@+id/txtNIC"
        android:layout_width="301dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="489dp"
        android:background="@drawable/edittext_rounded_background"
        android:gravity="center_vertical|start"
        android:hint="NIC"
        android:paddingStart="13dp" />

    <Switch
        android:id="@+id/nightDay"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="52dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_alignTop="@id/nightDay"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-1dp"
        android:layout_toStartOf="@id/nightDay"
        android:src="@drawable/day_sun_icon" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/nightDay"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="9dp"
        android:src="@drawable/night_moon_icon" />


    <EditText
        android:id="@+id/txtCardNumber"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="413dp"
        android:background="@drawable/edittext_rounded_background"
        android:gravity="center_vertical|start"
        android:hint="Card Number"
        android:paddingStart="13dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="61dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="166dp"
        android:layout_marginTop="87dp"
        app:srcCompat="@drawable/payment_icon" />

</RelativeLayout>